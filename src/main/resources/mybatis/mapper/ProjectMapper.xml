<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pro.financial.management.dao.ProjectDao">
    <resultMap id="BaseResultMap" type="com.pro.financial.management.dao.entity.ProjectEntity">
        <id column="project_id" jdbcType="INTEGER" property="projectId"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="fullname" jdbcType="VARCHAR" property="fullname"/>
        <result column="start_date" jdbcType="DATE" property="startDate"/>
        <result column="end_date" jdbcType="DATE" property="endDate"/>
        <result column="estincome" jdbcType="DECIMAL" property="estincome"/>
        <result column="budget" jdbcType="DECIMAL" property="budget"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="auditing_state" jdbcType="INTEGER" property="auditingState"/>
        <result column="sale_commis_state" jdbcType="INTEGER" property="saleCommisState"/>
        <result column="settlement_state" jdbcType="INTEGER" property="settlementState"/>
        <result column="create_user" jdbcType="INTEGER" property="createUser"/>
        <result column="ctime" jdbcType="TIMESTAMP" property="ctime"/>
        <result column="update_user" jdbcType="INTEGER" property="updateUser"/>
        <result column="utime" jdbcType="TIMESTAMP" property="utime"/>
    </resultMap>
    <sql id="Base_Column_List">
    project_id, code, name, fullname, start_date, end_date, estincome, budget, description, state, auditing_state,
    sale_commis_state, settlement_state, create_user, ctime, update_user, utime
  </sql>

    <select id="getList" resultType="com.pro.financial.management.dao.entity.ProjectEntity">
        SELECT
        p.*,
        u.username salesName,
        u1.username managerName,
        (
        SELECT
        GROUP_CONCAT( u.username )
        FROM
        project_user pu
        LEFT JOIN `user` u ON pu.user_id = u.user_id
        WHERE
        pu.type = 3
        AND pu.project_id = p.project_id
        ) userNames
        FROM
        project p
        LEFT JOIN project_user pu ON p.project_id = pu.project_id
        AND pu.type = 1
        LEFT JOIN `user` u ON pu.user_id = u.user_id
        LEFT JOIN project_user pu1 ON p.project_id = pu1.project_id
        AND pu1.type = 2
        LEFT JOIN `user` u1 ON pu1.user_id = u1.user_id
        where 1=1
        <if test="projectNo !=  null and projectNo != ''">
            and p.code LIKE "%${projectNo}%"
        </if>
        <if test="projectName !=  null and projectName != ''">
            and p.name LIKE "%${projectName}%"
        </if>
        <if test="state !=  null and state != ''">
            and p.state =#{state}
        </if>
        <if test="saleCommisState !=  null and saleCommisState != ''">
            and p.sale_commis_state =#{saleCommisState}
        </if>
        <if test="settlementState !=  null and settlementState != ''">
            and p.settlement_state =#{settlementState}
        </if>
        <if test="managerName !=  null and managerName != ''">
            and u1.username LIKE "%${managerName}%"
        </if>
        <if test="salesName !=  null and managerName != ''">
            and u.username LIKE "%${salesName}%"
        </if>
        <if test="startDate !=  null and endDate != null">
            and p.ctime > #{startDate}
            and p.ctime <![CDATA[ < ]]> #{endDate}
        </if>
  </select>

</mapper>