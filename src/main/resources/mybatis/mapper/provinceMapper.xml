<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pro.financial.management.dao.ProvinceDao">
    <resultMap id="BaseResultMap" type="com.pro.financial.management.dao.entity.ProvinceEntity">
        <id column="province_id" jdbcType="INTEGER" property="provinceId" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="code" jdbcType="VARCHAR" property="code" />
        <result column="country" jdbcType="VARCHAR" property="country" />
        <collection property="city" resultMap="com.pro.financial.management.dao.CityDao.BaseResultMap"/>
    </resultMap>

    <select id="getCity" resultMap="BaseResultMap">
        select * from province
        left join city using (province_id)
    </select>
</mapper>
